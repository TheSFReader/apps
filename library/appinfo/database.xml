<?xml version="1.0" encoding="ISO-8859-1" ?>
<database>
	 <name>*dbname*</name>
	 <create>true</create>
	 <overwrite>false</overwrite>
	 <charset>utf8</charset>
	 <table>
		<name>*dbprefix*library_items</name>
		<declaration>
			<field>				
				<name>id</name>
				<type>integer</type>
				<default>0</default>
				<notnull>true</notnull>
					<autoincrement>1</autoincrement>
				<length>4</length>
			</field>
			<field>
				<name>user</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>64</length>
			</field>
			<field>
				<name>name</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>100</length>
			</field>
			<field>
				<name>path</name>
				<type>clob</type>
				<notnull>true</notnull>
			</field>
		</declaration>
	</table>
		<table>
		<name>*dbprefix*library_ebooks</name>
		<declaration>
			<field>				
				<name>id</name>
				<type>integer</type>
				<default>0</default>
				<notnull>true</notnull>
					<autoincrement>1</autoincrement>
				<length>4</length>
			</field>
			<field>
				<name>user</name>
				<type>text</type>
				<notnull>true</notnull>
				<length>64</length>
			</field>
			<field>
				<name>authors</name>
				<type>clob</type>
			</field>
			<field>
				<name>filepath</name>
				<type>clob</type>
				<notnull>true</notnull>
			</field>
			<field>
				<name>title</name>
				<type>text</type>
				<length>100</length>
			</field>
			<field>
				<name>subjects</name>
				<type>text</type>
				<length>200</length>
			</field>
			<field>
				<name>mtime</name>
				<type>integer</type>
				<length>10</length>
			</field>
			<field>
				<name>updated</name>
				<type>text</type>
				<length>30</length>
			</field>
			<field>
				<name>description</name>
				<type>clob</type>
			</field>
			<field>
				<name>isbn</name>
				<type>text</type>
				<length>20</length>
			</field>
			<field>
				<name>language</name>
				<type>text</type>
				<length>20</length>
			</field>
			<field>
				<name>publisher</name>
				<type>text</type>
				<length>20</length>
			</field>
			<field>
				<name>detailsLink</name>
				<type>text</type>
				<length>255</length>
			</field>
			<field>
				<name>coverLink</name>
				<type>text</type>
				<length>255</length>
			</field>
			<field>
				<name>thumbnailLink</name>
				<type>text</type>
				<length>255</length>
			</field>
		</declaration>
	</table>
</database>
